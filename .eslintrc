{
  "parserOptions" : {
    "ecmaVersion"  : 2020,
    "sourceType"   : "module",
    "ecmaFeatures" : { "jsx" : true }
  },
  "env" : {
    "browser" : true,
    "node"    : true,
    "es6"     : true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": 2,
    "quotes": [2, "single"]
  }
}
